<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Post A Summer Program</h3>
        </div>
        <div class="panel-body">
          <%= form_for @program do |f| %>
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_field :description, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :start_date %>
                <%= f.date_select :start_date, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :end_date %>
                <%= f.date_select :end_date, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :application_deadline %>
                <%= f.date_select :application_deadline, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :website %>
                <%= f.text_field :website, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :school %>
                <%= f.text_field :school, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :other_requirements %>
                <%= f.text_area :other_requirements, class: "form-control" %>
              </div>
              <%= f.submit "Post", class: "btn btn-lg btn-success btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>